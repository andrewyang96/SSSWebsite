<!DOCTYPE html>
<html>
	<head>
		<% include partials/template/head.ejs %>
	</head>

	<body>
		<% include partials/template/navbar.ejs %>

		<div class="container">
			<div class="panel-group" id="accordion">
				<h1>FAQ</h1>

				<% var count = 1 %>

				<% faq.forEach(function (item) { %>
				<div class="panel panel-default">
					<div class="panel-heading">
						<h4 class="panel-title">
							<a class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" data-target="#question<%= count %>">
								<%- item.question %>
							</a>
						</h4>
					</div>

					<div class="panel-collapse collapse" id="question<%= count %>">
						<div class="panel-body">
							<p><%- item.answer %></p>
						</div>
					</div>
				</div>

				<% count += 1; %>
				<% }); %>

			</div>
		</div>

		<% include partials/template/footer.ejs %>
	</body>
</html>